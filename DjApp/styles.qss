    color: #f3cf2c;
    border: 1px solid #f3cf2c;
    border-radius: 10px;
}

QListWidget[class="fileBrowserList"] {
    background-color: rgba(17, 17, 17, 0.8);
    border: 1px solid rgba(243, 207, 44, 0.3);
    border-radius: 5px;
    color: #f3cf2c;
    font-size: 13px;
}

QListWidget[class="fileBrowserList"]::item {
    background-color: rgba(17, 17, 17, 0.8);
    border: 1px solid rgba(243, 207, 44, 0.2);
    border-radius: 8px;
    min-height: 80px;
    margin: 8px;
    padding: 10px;
}

QListWidget[class="fileBrowserList"]::item:hover {
    background-color: rgba(243, 207, 44, 0.1);
    border: 1px solid rgba(243, 207, 44, 0.4);
}

QLabel[class="fileBrowserStatus"] {
    color: #f3cf2c;
    font-size: 14px;
    font-weight: bold;
    padding: 5px;
    background-color: rgba(17, 17, 17, 0.8);
    border: 1px solid rgba(243, 207, 44, 0.3);
    border-radius: 5px;
}

QLabel[class="fileBrowserLabel"] {
    color: #f3cf2c;
    font-size: 14px;
    padding: 5px;
    margin-bottom: 10px;
    border-bottom: 1px solid rgba(243, 207, 44, 0.3);
}

QLabel[class="fileBrowserFileName"] {
    color: #f3cf2c;
    font-size: 13px;
    font-weight: bold;
    border: none;
    padding: 0;
    margin: 0 0 10px 0;
}

QPushButton[class="fileBrowserButton"] {
    background-color: rgba(17, 17, 17, 0.8);
    color: #f3cf2c;
    border: 1px solid #f3cf2c;
    border-radius: 10px;
    padding: 6px 12px;
    font-size: 12px;
    min-width: 80px;
}

QPushButton[class="fileBrowserButton"]:hover {
    background-color: rgba(243, 207, 44, 0.2);
    border: 1px solid #f3cf2c;
}

QPushButton[class="fileBrowserButton"]:pressed {
    background-color: rgba(243, 207, 44, 0.3);
    border: 2px solid #f3cf2c;
}

QPushButton[class="fileBrowserLoadButton"] {
    background-color: rgba(17, 17, 17, 0.8);
    color: #f3cf2c;
    border: 1px solid #f3cf2c;
    border-radius: 5px;
    padding: 8px 10px;
    margin: 5px 5px;
    font-size: 12px;
    font-weight: bold;
    min-height: 25px;
}

QPushButton[class="fileBrowserLoadButton"]:hover {
    background-color: rgba(243, 207, 44, 0.2);
    border: 1px solid #f3cf2c;
}

QPushButton[class="fileBrowserLoadButton"]:pressed {
    background-color: rgba(243, 207, 44, 0.3);
    border: 2px solid #f3cf2c;
}

