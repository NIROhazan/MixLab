/* Master volume slider */
QSlider[class="masterVolumeSlider"]::groove:horizontal {
    background: rgba(17, 17, 17, 0.8);
    height: 8px;
    border-radius: 4px;
}

QSlider[class="masterVolumeSlider"]::handle:horizontal {
    background: #f3cf2c;
    width: 24px;
    height: 24px;
    margin: -8px 0;
    border-radius: 12px;
    border: 2px solid #f3cf2c;
}

QSlider[class="masterVolumeSlider"]::sub-page:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #f3cf2c, stop:1 rgba(243, 207, 44, 0.5));
    border-radius: 4px;
}

/* Crossfader slider */
QSlider[class="crossfaderSlider"]::groove:horizontal {
    background: rgba(17, 17, 17, 0.8);
    height: 10px;
    border-radius: 5px;
}

QSlider[class="crossfaderSlider"]::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #f3cf2c, stop:0.5 #ffffff, stop:1 #f3cf2c);
    width: 30px;
    height: 30px;
    margin: -10px 0;
    border-radius: 15px;
    border: 2px solid #f3cf2c;
}

QSlider[class="crossfaderSlider"]::sub-page:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #f3cf2c, stop:1 rgba(243, 207, 44, 0.3));
    border-radius: 5px;
}

QSlider[class="crossfaderSlider"]::add-page:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(243, 207, 44, 0.3), stop:1 #f3cf2c);
    border-radius: 5px;
}

