/* Main application styles */
/* 
Main color variables:
- Neon yellow: #f3cf2c
- Neon green: #00ff9f
- Neon magenta: #ff00ff
- Near black: #111111
- Darker black: #0a0a0a
- Glass panel background: rgba(17, 17, 17, 0.7)
*/

/* Main window style with animated gradient background */
QMainWindow {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 #1a1a1a,
        stop:0.3 #222222,
        stop:0.6 #252525,
        stop:1 #1f1f1f
    );
}

/* Glass Panel Style with gradient */
QWidget#glassPanel {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(40, 40, 40, 180),
        stop:1 rgba(30, 30, 30, 220)
    );
    border: 1px solid rgba(243, 207, 44, 0.3);
    border-radius: 15px;
}

/* Button Styles with gradient */
QPushButton {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(50, 50, 50, 200),
        stop:1 rgba(35, 35, 35, 200)
    );
    color: #f3cf2c;
    border: 2px solid #f3cf2c;
    border-radius: 12px;
    padding: 12px 24px;
    font-family: "Segoe UI";
    font-size: 14px;
    font-weight: bold;
    min-height: 20px;
}

QPushButton:hover {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(60, 60, 60, 200),
        stop:1 rgba(45, 45, 45, 200)
    );
    border: 2px solid #f3cf2c;
    color: white;
}

QPushButton:pressed {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(35, 35, 35, 200),
        stop:1 rgba(25, 25, 25, 200)
    );
    border: 3px solid #f3cf2c;
    padding: 9px 19px;
}

/* Slider Styles with gradient tracks */
QSlider::groove:horizontal {
    border: 1px solid #f3cf2c;
    height: 4px;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(45, 45, 45, 200),
        stop:1 rgba(35, 35, 35, 200)
    );
    margin: 2px 0;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background: qradialgradient(
        cx:0.5, cy:0.5, radius:0.5, fx:0.5, fy:0.5,
        stop:0 #f3cf2c,
        stop:1 rgba(243, 207, 44, 0.7)
    );
    border: 2px solid #f3cf2c;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

/* Label Styles */
QLabel {
    color: #f3cf2c;
    font-family: "Segoe UI";
}

/* Settings Dialog Styles */
QLabel[class="neonText"] {
    color: #f3cf2c;
    font-family: "Segoe UI";
    font-size: 14px;
    margin-bottom: 10px;
}

QLabel[class="cacheStats"] {
    color: #ffffff;
    font-family: monospace;
    font-size: 14px;
    font-weight: bold;
    padding: 10px;
    background-color: rgba(40, 40, 40, 0.8);
    border-radius: 5px;
}

QLabel#displayLabel {
    font-family: "Segoe UI";
    font-size: 18px;
    color: #f3cf2c;
    padding: 5px;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(40, 40, 40, 180),
        stop:1 rgba(30, 30, 30, 220)
    );
    border-bottom: 2px solid rgba(243, 207, 44, 0.3);
    margin-bottom: 10px;
    border-radius: 5px;
}

/* Display Label - Light Mode */
QLabel[lightMode="true"]#displayLabel {
    font-family: "Segoe UI";
    font-size: 18px;
    color: #000000;
    padding: 5px;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(220, 220, 220, 180),
        stop:1 rgba(200, 200, 200, 220)
    );
    border-bottom: 2px solid rgba(44, 123, 243, 0.3);
    margin-bottom: 10px;
    border-radius: 5px;
}

/* Display Label - Purple Mode */
QLabel[purpleMode="true"]#displayLabel {
    font-family: "Segoe UI";
    font-size: 18px;
    color: #bf2cf3;
    padding: 5px;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(40, 40, 40, 180),
        stop:1 rgba(30, 30, 30, 220)
    );
    border-bottom: 2px solid rgba(191, 44, 243, 0.3);
    margin-bottom: 10px;
    border-radius: 5px;
}

/* Display Label - Forest Mode */
QLabel[forestMode="true"]#displayLabel {
    font-family: "Segoe UI";
    font-size: 18px;
    color: #2cf35d;
    padding: 5px;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(40, 60, 40, 180),
        stop:1 rgba(30, 50, 30, 220)
    );
    border-bottom: 2px solid rgba(44, 243, 93, 0.3);
    margin-bottom: 10px;
    border-radius: 5px;
}

/* LineEdit Styles with gradient */
QLineEdit {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(40, 40, 40, 180),
        stop:1 rgba(30, 30, 30, 220)
    );
    color: #f3cf2c;
    border: 1px solid rgba(243, 207, 44, 0.5);
    border-radius: 8px;
    padding: 5px 10px;
    font-family: "Segoe UI";
    font-size: 14px;
    selection-background-color: rgba(243, 207, 44, 0.3);
}

QLineEdit:focus {
    border: 2px solid #f3cf2c;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(45, 45, 45, 220),
        stop:1 rgba(35, 35, 35, 220)
    );
}

/* LineEdit - Light Mode */
QLineEdit[lightMode="true"] {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(220, 220, 220, 180),
        stop:1 rgba(200, 200, 200, 220)
    );
    color: #000000;
    border: 1px solid rgba(44, 123, 243, 0.5);
    border-radius: 8px;
    padding: 5px 10px;
    font-family: "Segoe UI";
    font-size: 14px;
    selection-background-color: rgba(44, 123, 243, 0.3);
}

QLineEdit[lightMode="true"]:focus {
    border: 2px solid #2c7bf3;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(225, 225, 225, 220),
        stop:1 rgba(205, 205, 205, 220)
    );
}

/* LineEdit - Purple Mode */
QLineEdit[purpleMode="true"] {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(50, 50, 50, 180),
        stop:1 rgba(40, 40, 40, 220)
    );
    color: #bf2cf3;
    border: 1px solid rgba(191, 44, 243, 0.5);
    border-radius: 8px;
    padding: 5px 10px;
    font-family: "Segoe UI";
    font-size: 14px;
    selection-background-color: rgba(191, 44, 243, 0.3);
}

QLineEdit[purpleMode="true"]:focus {
    border: 2px solid #bf2cf3;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(55, 55, 55, 220),
        stop:1 rgba(45, 45, 45, 220)
    );
}

/* LineEdit - Forest Mode */
QLineEdit[forestMode="true"] {
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(40, 60, 40, 180),
        stop:1 rgba(30, 50, 30, 220)
    );
    color: #2cf35d;
    border: 1px solid rgba(44, 243, 93, 0.5);
    border-radius: 8px;
    padding: 5px 10px;
    font-family: "Segoe UI";
    font-size: 14px;
    selection-background-color: rgba(44, 243, 93, 0.3);
}

QLineEdit[forestMode="true"]:focus {
    border: 2px solid #2cf35d;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(45, 65, 45, 220),
        stop:1 rgba(35, 55, 35, 220)
    );
}

